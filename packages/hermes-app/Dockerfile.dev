# Hermes App Development Dockerfile - Runs Vite dev server with hot reload
FROM node:22-alpine

# Install pnpm
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable && corepack prepare pnpm@latest --activate

# Set working directory
WORKDIR /app

# Copy package files for dependency installation
COPY packages/hermes-app/package.json pnpm-lock.yaml ./

# Install dependencies with caching
RUN --mount=type=cache,id=pnpm,target=/pnpm/store \
    pnpm install --no-frozen-lockfile

# Copy configuration files
COPY packages/hermes-app/vite.config.ts \
     packages/hermes-app/tsconfig.json \
     packages/hermes-app/tsconfig.node.json \
     packages/hermes-app/postcss.config.js \
     packages/hermes-app/index.html ./

# Source code will be mounted as volumes for hot reload
# Don't copy src/ and public/ here - they'll be mounted at runtime

# Expose Vite dev server port
EXPOSE 5173

# Start Vite dev server with host binding for Docker
CMD ["pnpm", "dev", "--host", "0.0.0.0"]

