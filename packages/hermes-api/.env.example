# Hermes API Configuration
# Copy this file to .env and modify as needed

# API Settings
HERMES_API_TITLE="Hermes API"
HERMES_API_DESCRIPTION="Video downloader API"
HERMES_API_VERSION="1.0.0"
HERMES_DEBUG=true

# Database
HERMES_DATABASE_URL="sqlite+aiosqlite:///./hermes.db"
HERMES_DATABASE_ECHO=false

# Redis/Cache
HERMES_REDIS_URL="redis://localhost:6379"
HERMES_REDIS_DB=0

# Security
HERMES_SECRET_KEY="your-secret-key-change-this-in-production"
HERMES_ALGORITHM="HS256"
HERMES_ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
HERMES_DOWNLOAD_DIR="./downloads"
HERMES_TEMP_DIR="./temp"

# API Keys (comma-separated)
HERMES_API_KEYS=""

# Rate Limiting
HERMES_RATE_LIMIT_PER_MINUTE=60
