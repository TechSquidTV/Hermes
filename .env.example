# Hermes Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# CORE SETTINGS
# =============================================================================

# JWT Secret Key - REQUIRED: Generate a secure random key
# Use: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
HERMES_SECRET_KEY=your-secret-key-change-this-in-production

# Debug mode - Set to false in production
HERMES_DEBUG=true

# =============================================================================
# API CONFIGURATION
# =============================================================================

# =============================================================================
# REVERSE PROXY CONFIGURATION
# =============================================================================

# Hermes application port (Caddy proxy)
HERMES_PORT=3000

# Hermes HTTPS port (Caddy proxy)
HERMES_HTTPS_PORT=3443

# Development server port (Vite)
HERMES_DEV_PORT=5173

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API server port
API_PORT=8000

# API metadata
API_TITLE=Hermes API
API_DESCRIPTION=Video downloader API
API_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL - Supports SQLite, PostgreSQL, MySQL
# SQLite (default for development):
HERMES_DATABASE_URL=sqlite+aiosqlite:///./data/hermes.db
# PostgreSQL (production example):
# HERMES_DATABASE_URL=postgresql+asyncpg://user:password@db:5432/hermes
# MySQL (production example):
# HERMES_DATABASE_URL=mysql+aiomysql://user:password@db:3306/hermes

# Enable SQL query logging (development only)
HERMES_DATABASE_ECHO=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL for task queuing and caching
HERMES_REDIS_URL=redis://redis:6379
# Redis database number
HERMES_REDIS_DB=0

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

# Token expiration settings
HERMES_ACCESS_TOKEN_EXPIRE_MINUTES=1440
HERMES_REFRESH_TOKEN_EXPIRE_DAYS=30
# JWT algorithm
HERMES_ALGORITHM=HS256

# =============================================================================
# FILE STORAGE
# =============================================================================

# Directories for downloads and temporary files
HERMES_DOWNLOAD_DIR=./downloads
HERMES_TEMP_DIR=./temp

# =============================================================================
# API KEYS & AUTHENTICATION
# =============================================================================

# Comma-separated list of valid API keys (optional)
HERMES_API_KEYS=

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limiting settings
HERMES_RATE_LIMIT_PER_MINUTE=60
HERMES_ENABLE_RATE_LIMITING=true
HERMES_ENABLE_TOKEN_BLACKLIST=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Login attempt protection
HERMES_MAX_LOGIN_ATTEMPTS=5
HERMES_LOGIN_ATTEMPT_WINDOW_MINUTES=15

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed origins
HERMES_ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]
# Allow credentials in CORS requests
HERMES_ALLOW_CREDENTIALS=true

# =============================================================================
# DOCKER-SPECIFIC SETTINGS
# =============================================================================

# Frontend app port (Docker production build)
HERMES_APP_PORT=3000

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# For development:
# - Use SQLite database (default)
# - Enable debug mode (HERMES_DEBUG=true)
# - Use localhost Redis (default)

# For production:
# - Use PostgreSQL or MySQL database
# - Disable debug mode (HERMES_DEBUG=false)
# - Use secure secret key
# - Enable rate limiting
# - Use HTTPS URLs for allowed origins
